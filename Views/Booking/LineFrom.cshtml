                id = $(this).val();
                $.ajax({
                    type: "GET",
                    url: "/Booking/getTo/" + id,
                    success: function (response) {
                        $("#To").empty();
                        $("#To").append("<option>select destination </option>")

                        response.forEach(function(entry)
                        {
                            $("#To").append("<option value =" + entry.Line_Id + " >" + entry.To + "</option>")
                        });
