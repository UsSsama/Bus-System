@model IEnumerable<busSystem_v8.Models.User>
@{
    ViewBag.Title = "PDF Page";
}
<div class="row">
    <div class="col-md-12">
        <div class="h2 text-center">Users Details</div>
        <table class="table table-bordered">

            <thead>
                <tr>
                    <td>
                        Age
                    </td>

                    <td>
                        Email
                    </td>
                    <td>
                        Name
                    </td>
                    <td>
                        BirthDate
                    </td>
                </tr>

            </thead>
            <tbody>

                @foreach (var emp in Model)

                {
                    <tr>
                        <td>@emp.Age</td>
                        <td>@emp.Email</td>
                        <td>@emp.Name</td>
                        <td>@emp.BirthDate</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-sm-2">
        <div class="btn btn-danger">@Html.ActionLink("Create Pdf", "CreatePdf", "Pdf") </div>
    </div>
</div>